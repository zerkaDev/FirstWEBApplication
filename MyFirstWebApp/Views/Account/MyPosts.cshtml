@await Html.PartialAsync("_accSideBar")
@model IEnumerable<Post>
    <div class="row">
        @for (int i = 0; i < Model.Count(); i += 3)
        {
            if (@Model.Count() > i)
            {
        <div class="col-lg-4">
            <h6 class="h6">@Model.ToList()[i].Title</h6>
            <a asp-controller="Home" asp-action="Post" asp-route-id="@Model.ToList()[i].Id"><img src="@Model.ToList()[i].Images.FirstOrDefault().Path" width="360" height="260" class="img-thumbnail"></a>
        </div>
            }
            if (@Model.Count() > i + 1)
            {
                <div class="col-lg-4">
                    <h6 class="h6">@Model.ToList()[i+1].Title</h6>
                    <a asp-controller="Home" asp-action="Post" asp-route-id="@Model.ToList()[i+1].Id"><img src="@Model.ToList()[i+1].Images.FirstOrDefault().Path" width="400" height="260" class="img-thumbnail"></a>
                </div>
            }
            if (@Model.Count() > i + 2)
            {
                <div class="col-lg-4">
                    <h6 class="h6">@Model.ToList()[i + 2].Title</h6>
                    <a asp-controller="Home" asp-action="Post" asp-route-id="@Model.ToList()[i+2].Id"><img src="@Model.ToList()[i+2].Images.FirstOrDefault().Path" width="400" height="260" class="img-thumbnail"></a>
                </div>
            }
        }
    </div>
